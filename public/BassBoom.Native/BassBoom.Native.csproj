<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFrameworks>netstandard2.0</TargetFrameworks>
    <AllowUnsafeBlocks>true</AllowUnsafeBlocks>
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
    <SymbolPackageFormat>snupkg</SymbolPackageFormat>
    <PackageId>BassBoom.Native</PackageId>
    <Title>BassBoom.Native</Title>
    <PackageDescription>BassBoom! Native libraries suppport for Basolia (LibMPV)</PackageDescription>
    <PackageTags>bassboom;basolia;native;runtime;csharp;library</PackageTags>
    <PackageProjectUrl>https://gitlab.com/aptivi/main/BassBoom</PackageProjectUrl>
    <PackageLicenseExpression>GPL-3.0-or-later</PackageLicenseExpression>
    <PackageIcon>OfficialAppIcon-BassBoom-512.png</PackageIcon>
    <IncludeSymbols>True</IncludeSymbols>
    <PackageReadmeFile>README.md</PackageReadmeFile>
    <RepositoryUrl>https://gitlab.com/aptivi/main/BassBoom.git</RepositoryUrl>
    <RepositoryType>git</RepositoryType>
  </PropertyGroup>

  <ItemGroup>
    <!-- This is the only way to reliably copy all the runtimes -->
    <None Include="runtimes\**\*.*" Pack="True" PackagePath="runtimes" Condition="'$(SystemWide)' != 'true'">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </None>
    
    <!-- Necessary targets -->
    <None Include="BassBoom.Native.targets" Pack="True" PackagePath="/" />

    <!-- For packaging -->
    <None Include="../../assets/OfficialAppIcon-BassBoom-512.png" Pack="true" PackagePath="\" />
    <None Include="../../README.md" Pack="true" PackagePath="\" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="SpecProbe.Loader" Version="3.5.1" />
    <PackageReference Include="SpecProbe.Software" Version="3.5.1" />
  </ItemGroup>

</Project>
